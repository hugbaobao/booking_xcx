.authorization {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  color: #585858;
  padding-bottom: 200rpx;
  z-index: 999;
}
.authorization .container {
  background-color: #fff;
  border-radius: 30rpx;
  width: 550rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 40rpx;
}
.authorization .container .title {
  font-size: 40rpx;
}
.authorization .container .words {
  font-size: 28rpx;
  line-height: 1.8;
  margin: 20rpx 0;
}
.authorization .container .words .navto {
  color: #003f78;
}
.authorization .container .btncontainer {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.authorization .container .btncontainer .btn {
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
  padding: 0 70rpx;
  background-color: #f6f6f6;
  color: #585858;
  font-size: 28rpx;
}
.authorization .container .btncontainer .btn::after {
  border: none;
}
.authorization .container .btncontainer .btn:last-child {
  color: #fff;
  background-color: #003f78;
}